@model IEnumerable<DDACAssignment.Models.Songs>

@{
    ViewData["Title"] = "Index";
}

@if (ViewBag.msg != "")
{
    <script>alert("@ViewBag.msg");</script>
}

<head>
    <style>
        {
            font-family: Arial, Helvetica, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        table, th, td {
            border: 1px solid #ddd;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #958eb6;
            color: white;
        }
    </style>
</head>

<h1>Song Pages</h1>

<p>
    <a asp-action="Create">New Song</a>
</p>

<form method="get" action="">
    Enter Song Name to Search <input type="text" name="searchString" id="searchString" />
    <br /><br />
    <input type="submit" name="submit" value="Search Song" /> <!--name is parameter, value is the text to appear in the button-->
    <br /> <br /> <br /> <!--br is to break new line -->
</form>

<table style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SongName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SongUploadDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SongGenre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProducerName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SongName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SongUploadDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SongGenre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProducerName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.SongID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.SongID">View</a> |
                    <a asp-action="Delete" asp-route-id="@item.SongID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
