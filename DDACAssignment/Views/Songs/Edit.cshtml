@model DDACAssignment.Models.Songs

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Songs</h4>
<hr />
<div class="row">
    <div class="col-md-10">
        <form enctype="multipart/form-data" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SongID" />
            <div class="form-group">
                <label asp-for="SongName" class="control-label"></label>
                <input asp-for="SongName" class="form-control" />
                <span asp-validation-for="SongName" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="SongUploadDate" class="control-label"></label>
                <input asp-for="SongUploadDate" class="form-control" />
                <span asp-validation-for="SongUploadDate" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="SongGenre" class="control-label"></label>
                <input asp-for="SongGenre" class="form-control" />
                <span asp-validation-for="SongGenre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProducerName" class="control-label"></label>
                <input asp-for="ProducerName" class="form-control" />
                <span asp-validation-for="ProducerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span asp-controller="songFiles" asp-action="Edit"></span>
                <p>Edit Song Files:</p>
                <input asp-for="FileName" class="form-control" readonly /> <br />
                <input type="file" name="songFiles" accept="audio/*" multiple />
                <br />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
