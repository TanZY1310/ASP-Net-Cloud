@using Microsoft.AspNetCore.Identity
@using DDACAssignment.Areas.Identity.Data


@inject SignInManager<DDACAssignmentUser> SignInManager
@inject UserManager<DDACAssignmentUser> UserManager

<ul class="navbar-nav">

    @{
        var user = await UserManager.GetUserAsync(User); //get all user details stored in aspnetusers
    }

    @if (SignInManager.IsSignedIn(User) && user.Role.Equals("Admin")) //compare with the roles registered into user details
    {
        <li class="nav-item">
