        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
        <li>
            <a class="nav-link text-dark" asp-area="" asp-controller="UserInfo" asp-action="Index">User Information List</a>
        </li>
    }
    else if (SignInManager.IsSignedIn(User) && user.Role.Equals("Composer")) //compare with the roles registered into user details
